<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnAgregarUsuario"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Agregar "
        android:onClick="paginaAgregar"
        app:layout_constraintBottom_toTopOf="@+id/btnMantenedor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMantenedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mantenedor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMantenedor" />
</android.support.constraint.ConstraintLayout>